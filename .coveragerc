[run]
# Coverage configuration file

# Source code directory
source = src

# Files to include in coverage
include = 
    src/*
    tests/*

# Files to exclude from coverage
omit =
    */venv/*
    */env/*
    */.venv/*
    */site-packages/*
    */tests/*
    */test_*
    */__pycache__/*
    */migrations/*
    */settings/*
    */config/*
    */manage.py
    */wsgi.py
    */asgi.py
    */.tox/*
    */setup.py
    */conftest.py

# Enable branch coverage
branch = True

# Parallel processing
parallel = True

# Data file location
data_file = .coverage

[report]
# Reporting configuration

# Skip covered files in report
skip_covered = False

# Skip empty files
skip_empty = True

# Show missing lines
show_missing = True

# Precision for percentages
precision = 2

# Sort by coverage percentage
sort = Cover

# Exclude lines from coverage
exclude_lines =
    pragma: no cover
    def __repr__
    if self.debug:
    if settings.DEBUG
    raise AssertionError
    raise NotImplementedError
    if 0:
    if __name__ == .__main__.:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

# Fail if coverage is below this percentage
fail_under = 80

[html]
# HTML report configuration
directory = htmlcov
title = Spec-Kit Coverage Report
show_contexts = True

[xml]
# XML report configuration
output = coverage.xml

[json]
# JSON report configuration
output = coverage.json
pretty_print = True
show_contexts = True